<h3>Edit your Character</h3>

<%= form_for [@house,@character], method: :put do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :house_id %>
  <%= f.text_field :house_id %>

<%= f.submit %>
<% end %>

<%= form_for [@house,@character], method: :delete do |f| %>
  <%= f.submit "Delete", class: "delete" %>
  <% end %>
